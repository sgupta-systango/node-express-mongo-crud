<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body{
            background-color:cadetblue ;
        }
    </style>
</head>
{{#if msg}}
    <div class="alert alert-success alert-dismissible fade show">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>{{msg}}</strong>
    </div>
{{/if}}
{{#if msg1}}
    <div class="alert alert-danger alert-dismissible fade show">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>{{msg1}}</strong>
    </div>
{{/if}}
{{#if msg2}}
    <div class="alert alert-success alert-dismissible fade show">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>{{msg2}}</strong>
    </div>
{{/if}}
<body>
    <div class="col-md-12 mx-auto">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-white">Order Details</span>
            <span class="badge badge-danger badge-pill">{{order.length}}</span>
        </h4> 
        <div class="d-flex justify-content-between align-items-center mb-3 bg-white">    
            <table class="table table-responsive">
                <tr>
                    <th>Product Image</th>
                    <th>Order Id</th>
                    <th>Reference String</th>
                    <th>Product Name</th>
                    <th>Order Quantity</th>
                    <th>Product Price</th>
                    <th>Total</th>
                    <th>Order date</th>
                </tr>
                {{#each order}}
                <tr>
                    <td><img src="/{{this.product.image}}" width="50" height="50"></td>
                    <td>{{this.orderId}}</td>
                    <td>{{this.refString}}</td>
                    <td>{{this.product.name}}</td>
                    <td>{{this.quantity}}</td>
                    <td>{{this.product.price}}</td>
                    <td>{{this.amount}}</td>
                    <td>{{this.orderDate}}</td>
                </tr>
                {{/each}}
            </table>
        </div>
    </div>
</body>
</html>
